<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_mvp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MVP" />

        <Button
            android:id="@+id/btn_android_room_with_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room View" />

        <Button
            android:text="Data Binding"
            android:id="@+id/btn_data_binding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_data_bind_recycler_view"
            android:text="Data Bind RecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_double_bind"
            android:text="Double Bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_okhttp"
            android:text="Okhttp的使用"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="Recyclerview的使用"
            android:id="@+id/btn_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:text="Constraint的使用"
            android:id="@+id/btn_constraint_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="WebSocket的使用"
            android:id="@+id/btn_web_socket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="OpenGL的使用"
            android:id="@+id/btn_open_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="VideoView的使用"
            android:id="@+id/btn_video_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:text="uri的使用"
            android:id="@+id/btn_uri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="打开相机1"
            android:layout_width="wrap_content"
            android:id="@+id/btn_open_camera1"
            android:layout_height="wrap_content" />

        <Button
            android:text="打开相机2"
            android:layout_width="wrap_content"
            android:id="@+id/btn_open_camera2"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>